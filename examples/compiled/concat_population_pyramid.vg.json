{
    "$schema": "https://vega.github.io/schema/vega/v3.json",
    "description": "A population pyramid for the US in 2000.",
    "autosize": "pad",
    "padding": 5,
    "data": [
        {
            "name": "source_0",
            "url": "data/population.json",
            "format": {
                "type": "json"
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.year == 2000"
                },
                {
                    "type": "formula",
                    "expr": "datum.sex == 2 ? 'Female' : 'Male'",
                    "as": "gender"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"age\"])",
                    "as": "age"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"people\"])",
                    "as": "people"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"gender\"]===\"Female\""
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "age",
                        "gender"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "people"
                    ],
                    "as": [
                        "sum_people"
                    ]
                },
                {
                    "type": "stack",
                    "groupby": [
                        "age"
                    ],
                    "field": "sum_people",
                    "sort": {
                        "field": [
                            "gender"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "sum_people_start",
                        "sum_people_end"
                    ],
                    "offset": "zero"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"people\"])",
                    "as": "people"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"gender\"]===\"Male\""
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "age",
                        "gender"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "people"
                    ],
                    "as": [
                        "sum_people"
                    ]
                },
                {
                    "type": "stack",
                    "groupby": [
                        "age"
                    ],
                    "field": "sum_people",
                    "sort": {
                        "field": [
                            "gender"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "sum_people_start",
                        "sum_people_end"
                    ],
                    "offset": "zero"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "concat_0_width",
            "value": 200
        },
        {
            "name": "concat_0_y_step",
            "value": 21
        },
        {
            "name": "concat_0_height",
            "update": "bandspace(domain('concat_0_y').length, 0.1, 0.05) * concat_0_y_step"
        },
        {
            "name": "concat_1_width",
            "value": 20
        },
        {
            "name": "concat_1_y_step",
            "value": 21
        },
        {
            "name": "concat_1_height",
            "update": "bandspace(domain('concat_1_y').length, 1, 0.5) * concat_1_y_step"
        },
        {
            "name": "concat_2_width",
            "value": 200
        },
        {
            "name": "concat_2_y_step",
            "value": 21
        },
        {
            "name": "concat_2_height",
            "update": "bandspace(domain('concat_2_y').length, 0.1, 0.05) * concat_2_y_step"
        }
    ],
    "layout": {
        "padding": {
            "row": 10,
            "column": 10
        },
        "offset": 10,
        "bounds": "full",
        "align": "each"
    },
    "marks": [
        {
            "type": "group",
            "name": "concat_0_group",
            "title": {
                "text": "Female"
            },
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "concat_0_width"
                    },
                    "height": {
                        "signal": "concat_0_height"
                    }
                }
            },
            "marks": [
                {
                    "name": "concat_0_marks",
                    "type": "rect",
                    "style": [
                        "bar"
                    ],
                    "from": {
                        "data": "data_1"
                    },
                    "encode": {
                        "update": {
                            "fill": {
                                "scale": "color",
                                "field": "gender"
                            },
                            "x": {
                                "scale": "concat_0_x",
                                "field": "sum_people_end"
                            },
                            "x2": {
                                "scale": "concat_0_x",
                                "field": "sum_people_start"
                            },
                            "y": {
                                "scale": "concat_0_y",
                                "field": "age"
                            },
                            "height": {
                                "scale": "concat_0_y",
                                "band": true
                            }
                        }
                    }
                }
            ],
            "axes": [
                {
                    "scale": "concat_0_x",
                    "orient": "bottom",
                    "title": "population",
                    "labelFlush": true,
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(concat_0_width/40)"
                    },
                    "zindex": 1
                },
                {
                    "scale": "concat_0_x",
                    "orient": "bottom",
                    "grid": true,
                    "tickCount": {
                        "signal": "ceil(concat_0_width/40)"
                    },
                    "gridScale": "concat_0_y",
                    "domain": false,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "ticks": false,
                    "zindex": 0
                }
            ]
        },
        {
            "type": "group",
            "name": "concat_1_group",
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "concat_1_width"
                    },
                    "height": {
                        "signal": "concat_1_height"
                    }
                }
            },
            "marks": [
                {
                    "name": "concat_1_marks",
                    "type": "text",
                    "style": [
                        "text"
                    ],
                    "from": {
                        "data": "data_0"
                    },
                    "encode": {
                        "update": {
                            "align": {
                                "value": "center"
                            },
                            "fill": {
                                "value": "black"
                            },
                            "x": {
                                "signal": "concat_1_width",
                                "mult": 0.5
                            },
                            "y": {
                                "scale": "concat_1_y",
                                "field": "age"
                            },
                            "text": {
                                "signal": "format(datum[\"age\"], \"\")"
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "group",
            "name": "concat_2_group",
            "title": {
                "text": "Male"
            },
            "style": "cell",
            "encode": {
                "update": {
                    "width": {
                        "signal": "concat_2_width"
                    },
                    "height": {
                        "signal": "concat_2_height"
                    }
                }
            },
            "marks": [
                {
                    "name": "concat_2_marks",
                    "type": "rect",
                    "style": [
                        "bar"
                    ],
                    "from": {
                        "data": "data_2"
                    },
                    "encode": {
                        "update": {
                            "fill": {
                                "scale": "color",
                                "field": "gender"
                            },
                            "x": {
                                "scale": "concat_2_x",
                                "field": "sum_people_end"
                            },
                            "x2": {
                                "scale": "concat_2_x",
                                "field": "sum_people_start"
                            },
                            "y": {
                                "scale": "concat_2_y",
                                "field": "age"
                            },
                            "height": {
                                "scale": "concat_2_y",
                                "band": true
                            }
                        }
                    }
                }
            ],
            "axes": [
                {
                    "scale": "concat_2_x",
                    "orient": "bottom",
                    "title": "population",
                    "labelFlush": true,
                    "labelOverlap": true,
                    "tickCount": {
                        "signal": "ceil(concat_2_width/40)"
                    },
                    "zindex": 1
                },
                {
                    "scale": "concat_2_x",
                    "orient": "bottom",
                    "grid": true,
                    "tickCount": {
                        "signal": "ceil(concat_2_width/40)"
                    },
                    "gridScale": "concat_2_y",
                    "domain": false,
                    "labels": false,
                    "maxExtent": 0,
                    "minExtent": 0,
                    "ticks": false,
                    "zindex": 0
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "fields": [
                    {
                        "data": "data_1",
                        "field": "gender"
                    },
                    {
                        "data": "data_2",
                        "field": "gender"
                    }
                ],
                "sort": true
            },
            "range": [
                "#e377c2",
                "#1f77b4"
            ]
        },
        {
            "name": "concat_0_x",
            "type": "linear",
            "domain": {
                "data": "data_1",
                "fields": [
                    "sum_people_start",
                    "sum_people_end"
                ]
            },
            "range": [
                0,
                {
                    "signal": "concat_0_width"
                }
            ],
            "reverse": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "concat_0_y",
            "type": "band",
            "domain": {
                "data": "data_1",
                "field": "age",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "concat_0_y_step"
                }
            },
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        },
        {
            "name": "concat_1_y",
            "type": "point",
            "domain": {
                "data": "data_0",
                "field": "age",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "concat_1_y_step"
                }
            },
            "padding": 0.5
        },
        {
            "name": "concat_2_x",
            "type": "linear",
            "domain": {
                "data": "data_2",
                "fields": [
                    "sum_people_start",
                    "sum_people_end"
                ]
            },
            "range": [
                0,
                {
                    "signal": "concat_2_width"
                }
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "concat_2_y",
            "type": "band",
            "domain": {
                "data": "data_2",
                "field": "age",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "concat_2_y_step"
                }
            },
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
